<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Help">
    <LinearLayout
        android:id="@+id/backButtonAndHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp">
        <RelativeLayout
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_button" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_sign"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="@string/helpTextView"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_marginHorizontal="30dp"
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/intro"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/faqHeading"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/faqHeading"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/faqContent"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/faqContent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/contactUsHeading"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contactUsHeading"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/contactUsContent"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="@string/contactUsContent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/userGuidesUsHeading"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="@string/userGuidesHeading"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/userGuidesContent"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:text="@string/userGuidesContent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/feedbackHeading"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedbackHeading"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/feedbackContent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedbackContent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/outro"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outro"
        android:textSize="16sp" />
</LinearLayout>