<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".changePassword">

    <LinearLayout
        android:id="@+id/backButtonAndHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp">
        <RelativeLayout
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_button" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_sign"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    <TextView
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/changePasswordTextView"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    </LinearLayout>
    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/createNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createNewPassword"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/contentChange"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contentChange"
        android:textSize="16sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/enterPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterPasswordTextView"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/enterPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="16sp"
        android:hint="@string/enterPasswordEditText"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/confirmPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmPasswordTextView"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="16sp"
        android:hint="@string/confirmPasswordEditText"/>
    <Button
        android:id="@+id/resetPassword"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="70dp"
        android:background="@drawable/button_color"
        android:textColor="@android:color/white"
        android:text="@string/resetPassword"/>
</LinearLayout>