<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DestinationSelectionActivity">

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalized Recommendations"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Title Text -->
    <!--<TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where are you going?"
        android:textSize="24sp"
        android:layout_below="@id/greetingText"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>-->

    <!-- Type of Destination Text -->
    <TextView
        android:id="@+id/destinationTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What type of destinations do you prefer?"
        android:textSize="18sp"
        android:layout_below="@id/greetingText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Grid Layout for Destination Types -->
    <GridLayout
        android:id="@+id/destinationGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/destinationTypeText"
        android:layout_marginTop="8dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Beach -->
        <LinearLayout
            android:id="@+id/beaches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selection_tile_bg"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_beaches"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/beachez"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beaches"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>
        </LinearLayout>

        <!-- Mountains -->
        <LinearLayout
            android:id="@+id/mountains"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_mountains"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mountain"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false"  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mountains"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />
        </LinearLayout>

        <!-- Cities -->
        <LinearLayout
            android:id="@+id/city"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_city"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/citie"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cities"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />
        </LinearLayout>

        <!-- Countryside -->
        <LinearLayout
            android:id="@+id/countryside"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_countryside"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/countryside"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Countryside"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>
        </LinearLayout>

        <!-- Historical Sites -->
        <LinearLayout
            android:id="@+id/historical_site"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_historical_site"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/historical_sitez"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historical sites"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />
        </LinearLayout>

    </GridLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/continueButton"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:enabled="false" />

</RelativeLayout>
