<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivitySelectionActivity">

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalized Recommendations"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Title Text -->
    <TextView
        android:id="@+id/activityTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What type of activities do you prefer?"
        android:textSize="18sp"
        android:layout_below="@id/greetingText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"/>

    <!-- Grid Layout for Activities -->
    <GridLayout
        android:id="@+id/activityGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityTypeText"
        android:layout_marginTop="8dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Adventure Sports -->
        <LinearLayout
            android:id="@+id/adventure_sports"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_adventure_sports"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/adventure"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adventure Sports"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />
        </LinearLayout>

        <!-- Cultural Experiences -->
        <LinearLayout
            android:id="@+id/cultural_experiences"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_cultural_experiences"
                android:layout_marginTop="8dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cultural"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultural Experiences"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />
        </LinearLayout>

        <!-- Relaxation & Wellness -->
        <LinearLayout
            android:id="@+id/relaxation_wellness"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_relaxation_wellness"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/relaxation"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relaxation and Wellness"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>
        </LinearLayout>

        <!-- Food & Dining -->
        <LinearLayout
            android:id="@+id/food_dining"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_food_dining"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/food"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food and Dining"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp" />
        </LinearLayout>

        <!-- Shopping -->
        <LinearLayout
            android:id="@+id/shopping"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_shopping"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shopping"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>
        </LinearLayout>

        <!-- Nature & Wildlife -->
        <LinearLayout
            android:id="@+id/nature_wildlife"
            android:background="@drawable/selection_tile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_nature_wildlife"
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nature and Wildlife"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"/>
        </LinearLayout>

    </GridLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityGrid"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_below="@id/activityGrid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:enabled="false" />

</RelativeLayout>
